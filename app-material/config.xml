<?xml version='1.0' encoding='utf-8'?>
<widget id="br.ufrj.cos.esegroup" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Issues Authenticator</name>
    <description>
        Aplicativo para controle de acesso e gestão de preferências do sistema Issues Monitoring.
    </description>
    <author email="jararaca.issuesmonitoring@gmail.com" href="https://github.com/ESEGroup/IssuesAuthenticatorJararaca">
        Jararaca Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.4.0" />
    <engine name="browser" spec="^5.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
</widget>
